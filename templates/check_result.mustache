{{!
    @template local_course_checker/check_result

    Renders a single result line for a course checker result.

    Example context (json):
    {
        "title": "Quiz 1: Due date is missing",
        "link": "https://moodle.example.com/mod/quiz/view.php?id=42",
        "message": "Please add a due date to this activity.",
        "text_class": "text-danger"
    }
}}

<div class="row align-items-center m-0 p-3 border-bottom">
    <div class="col-1 p-0">
        <span class="icon-size-5 {{text_class}}">{{{icon}}}</span>
    </div>
    <div class="col-11 p-0">
        {{#link}}<a href="{{link}}" class="text-reset" target="_blank">{{/link}}{{^link}}<span>{{/link}}
        {{title}}
        {{^link}}</span>{{/link}}{{#link}}</a>{{/link}}
        <span class="{{text_class}}">{{message}}</span>
        {{#link_checker_additional}}
            &nbsp;-&nbsp;
            <a href="{{.}}" class="ms-2" target="_blank" rel="noopener" title="{{.}}">
                <i class="icon fa fa-external-link text-muted"></i>
            </a>
        {{/link_checker_additional}}
    </div>
</div>
