{{!
    @template local_course_checker/checker

    Displays grouped checks by their status (error, failed, warning, successful), each section with a heading and nested rendered check components.

    Example context (json):
    {
        "checks": {
            "error": {
                "checks": [
                    "<div>Rendered check template with error status</div>"
                ]
            },
            "failed": {
                "checks": [
                    "<div>Rendered check template with failed status</div>"
                ]
            },
            "warning": {
                "checks": []
            },
            "successful": {
                "checks": [
                    "<div>Rendered check template with successful status</div>"
                ]
            }
        }
    }
}}
{{#checks}}
    {{#error}}
        <h2 class="mb-3 mt-3">{{#str}}error_checks, local_course_checker{{/str}}</h2>
        {{#checks}}
            {{{.}}}
        {{/checks}}
    {{/error}}
    {{#failed}}
        <h2 class="mb-3 mt-3">{{#str}}failed_checks, local_course_checker{{/str}}</h2>
        {{#checks}}
            {{{.}}}
        {{/checks}}
    {{/failed}}
    {{#warning}}
        <h2 class="mb-3 mt-3">{{#str}}warning_checks, local_course_checker{{/str}}</h2>
        {{#checks}}
            {{{.}}}
        {{/checks}}
    {{/warning}}
    {{#successful}}
        <h2 class="mb-3 mt-3">{{#str}}successful_checks, local_course_checker{{/str}}</h2>
        {{#checks}}
            {{{.}}}
        {{/checks}}
    {{/successful}}
{{/checks}}